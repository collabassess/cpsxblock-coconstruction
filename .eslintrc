{
    "rules": {
        "indent": ["warn", 4],
        "linebreak-style": ["error", "unix"],
        "no-console": ["error", {"allow": ["error", "warn"]}]
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "env": {
        "es6": true,
        "node": true,
        "browser": true
    },
    "globals": {
        "$": true,
        "runtime": true,
        "element": true,
        "data": true
    }
}